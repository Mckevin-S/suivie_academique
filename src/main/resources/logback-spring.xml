<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Propriétés pour la configuration -->
    <property name="LOGS_DIR" value="./logs"/>
    <property name="APP_NAME" value="suivie-academique"/>

    <!-- Pattern pour les logs -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n"/>

    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- ========== CONSOLE APPENDER ========== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========== FILE APPENDERS ========== -->

    <!-- Fichier pour TOUS les logs -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}/${APP_NAME}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rotation quotidienne -->
            <fileNamePattern>${LOGS_DIR}/archive/${APP_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Conserver 30 jours d'archives -->
            <maxHistory>30</maxHistory>
            <!-- Taille maximale totale des archives : 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Fichier pour les ERREURS uniquement -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}/${APP_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_DIR}/archive/${APP_NAME}-error-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Fichier pour les logs de SÉCURITÉ -->
    <appender name="FILE_SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}/${APP_NAME}-security.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_DIR}/archive/${APP_NAME}-security-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Fichier pour les logs d'AUDIT (actions utilisateur) -->
    <appender name="FILE_AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}/${APP_NAME}-audit.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_DIR}/archive/${APP_NAME}-audit-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ========== LOGGERS ========== -->

    <!-- Logger pour la sécurité -->
    <logger name="SECURITY_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="FILE_SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger pour l'audit -->
    <logger name="AUDIT_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="FILE_AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logs de votre application -->
    <logger name="com.suivie_academique.suivie_academique" level="DEBUG"/>

    <!-- Logs Spring Security (à INFO pour ne pas surcharger) -->
    <logger name="org.springframework.security" level="INFO"/>

    <!-- Logs Hibernate (SQL) -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- Logger ROOT (par défaut) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_ERROR"/>
    </root>

</configuration>